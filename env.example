# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8001
MCP_TIMEOUT=60000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/ai_agent_memory
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=agent_memories

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cipher Integration
CIPHER_API_URL=https://cipher.informedcrew.com/mcp/http
CIPHER_API_KEY=your-cipher-api-key-here
CIPHER_TIMEOUT=30
CIPHER_MAX_RETRIES=3
CIPHER_RETRY_DELAY=1.0
CIPHER_CACHE_TTL_HOURS=1
CIPHER_ENABLE_HYBRID_STORAGE=true

# Weaviate Integration
WEAVIATE_API_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_TIMEOUT=30
WEAVIATE_MAX_RETRIES=3
WEAVIATE_RETRY_DELAY=1.0
WEAVIATE_COLLECTION_NAME=AgentMemories
WEAVIATE_VECTOR_DIMENSION=384
WEAVIATE_ENABLE_HYBRID_SEARCH=true
WEAVIATE_SIMILARITY_THRESHOLD=0.7
WEAVIATE_MAX_SEARCH_RESULTS=100
WEAVIATE_BATCH_SIZE=100

# Memory Configuration
MAX_MEMORY_CONTENT_LENGTH=10000
MAX_CONTEXT_SIZE=50000
MEMORY_RETENTION_DAYS=365

# Agent Configuration
MAX_AGENTS_PER_ROUTE=10
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT_SECONDS=300

# Routing Configuration
ROUTING_STRATEGY=intelligent_load_balanced
MAX_ROUTING_ATTEMPTS=3
ROUTING_TIMEOUT_SECONDS=60

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Caching Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
ENABLE_CACHE=true
